<h2>Label Search Results</h2>
<% if @results.count == 0 %>
  <h3>There is no item matched by the search word</h3>
<% else %>
  <div id="task_list">
      <table class="table">
        <tr>
          <th class="left">ID</th>
          <th class="left">Name</th>
          <th class="left">Detail</th>
          <th class="left">Expired at</th>
          <th class="left">Status</th>
          <th class="left">Priority</th>
          <th colspan=3>Actions</th>
        </tr>
      <% @results.each do |result| %>
        <tr>
          <td><%= result.id %></td>
          <td><%= result.name %></td>
          <td><%= result.detail %></td>
          <td><%= result.expired_at %></td>
          <td><%= result.status %></td>
          <td><%= result.priority_type %></td>
          <td class="action"><%= link_to 'Show', task_path(result) %></td>
          <td class="action"><%= link_to 'Edit', edit_task_path(result) %></td>
          <td class="action"><%= link_to 'Delete', task_path(result),
                              method: :delete,
                              data: {confirm:'Are you sure you want to delete? '} %> </td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>

<div class="btn"><%= link_to'Return to Label List', labels_path %></div>
