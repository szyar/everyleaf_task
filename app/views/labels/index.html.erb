<div class="container">

  <h1>Labels List</h1>

  <h2>
    <%= form_with(model: @labels, url: "/label/search", method: "get", local: true ) do |form| %>
        <%= form.collection_select :label_id, current_user.labels.order(:name), :id, :name %>
        <%= form.button "Search" %>
    <% end %>
  </h2>

  <div id="task_list">
    <table class="table">
      <tr>
        <th class="left">Name</th>
        <th colspan=3>Actions</th>
      </tr>
      <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td class="action"><%= link_to 'Show', label_path(label) %></td>
        <td class="action"><%= link_to 'Edit', edit_label_path(label) %></td>
        <td class="action"><%= link_to 'Delete', label_path(label),
                            method: :delete,
                            data: {confirm:'Are you sure you want to delete?'} %> </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<h3>
  <%= will_paginate @labels %>
</h3>

<div class="btn">
  <%= link_to 'New Label', new_label_path %>
</div>
