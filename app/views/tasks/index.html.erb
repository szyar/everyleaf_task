<div class="container">
  <h1>Task List</h1>
  <div id="task_list">
    <table class="table">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Detail</th>
        <th colspan=3>Actions</th>
      </tr>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td class="action"><%= link_to 'Show', task_path(task) %></td>
        <td class="action"><%= link_to 'Edit', edit_task_path(task) %></td>
        <td class="action"><%= link_to 'Delete', task_path(task),
                            method: :delete,
                            data: {confirm:'Are you sure you want to delete? '} %> </td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="btn"><%= link_to'New task ', new_task_path %></div>
  <%= link_to 'LogOut', logout_path,
    method: :delete %>

</div>
